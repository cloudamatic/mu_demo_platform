{
  "appname": "test",
  "region": "us-east-1",
  "cloudformation_stacks": [
    {
      "name": "vpc",
      "creation_style": "new",
      "on_failure": "DO_NOTHING",
      "template_url": "https://s3-us-west-1.amazonaws.com/chef-dev/cloudformation/capv3-2nat-targetvpc-template.json",
      "pass_deploy_key_as": "KeyName",
      "parameters": [
        {
          "parameter_key": "AdminIPCidr",
          "parameter_value": "122.168.194.184/32"
        },
        {
          "parameter_key": "ChefServerIPCidr",
          "parameter_value": "<%= $myPublicIp %>/32"
        },
        {
          "parameter_key": "NATNodeInstanceType",
          "parameter_value": "m1.small"
        }
      ]
    }
  ],
  "databases": [
    {
      "name": "solrdb",
      "engine": "mysql",
      "creation_style": "new",
      "db_family": "mysql5.6",
      "version": "5.6.13",
      <
      %
      if
      $environment
      =
      =
      "development"
      then
      %
      >
      "size": "db.m1.small",
      <
      %
      else
      %
      >
      "size": "db.m3.medium",
      <
      %
      end
      %
      >
      "storage": 5,
      "port": 3306,
      "vpc": {
        "vpc_name": "VPC"
      },
      "add_firewall_rules": [
        {
          "rule_name": "ChefNodeSecurityGroup"
        },
        {
          "rule_name": "ChefAdminSecurityGroup"
        }
      ],
      "dependencies": [
        {
          "name": "vpc",
          "type": "cloudformation_stack"
        }
      ],
      "publicly_accessible": false
    },
    {
      "name": "drupaldbexistingsnapshot",
      "engine": "mysql",
      "creation_style": "existing_snapshot",
      "identifier": "rds-drupaldb-20140408104232",
      "db_family": "mysql5.6",
      "version": "5.6.13",
      <
      %
      if
      $environment
      =
      =
      "development"
      then
      %
      >
      "size": "db.m1.small",
      <
      %
      else
      %
      >
      "size": "db.m3.medium",
      <
      %
      end
      %
      >
      "storage": 5,
      "port": 3306,
      "vpc": {
        "vpc_name": "VPC"
      },
      "add_firewall_rules": [
        {
          "rule_name": "ChefNodeSecurityGroup"
        },
        {
          "rule_name": "ChefAdminSecurityGroup"
        }
      ],
      "dependencies": [
        {
          "name": "vpc",
          "type": "cloudformation_stack"
        }
      ],
      "publicly_accessible": false
    }
  ],
  "servers": [
    {
      "name": "solr",
      "ssh_user": "ubuntu",
      "platform": "ubuntu",
      "iam-role": "demo-node",
      "vpc": {
        "vpc_name": "VPC",
        "subnet_name": "PriSubnet1",
        "nat_host_name": "NAT1Instance",
        "nat_ssh_user": "ec2-user"
      },
      "add_firewall_rules": [
        {
          "rule_name": "ChefNodeSecurityGroup"
        },
        {
          "rule_name": "ChefAdminSecurityGroup"
        }
      ],
      <
      %
      if
      $environment
      =
      =
      "development"
      then
      %
      >
      "size": "t1.micro",
      <
      %
      else
      %
      >
      "size": "m4.large",
      <
      %
      end
      %
      >
      "run_list": [
        "recipe[mu-utility::git]"
      ],
      "dependencies": [
        {
          "name": "solrdb",
          "type": "database"
        },
        {
          "name": "vpc",
          "type": "cloudformation_stack"
        }
      ],
      "ingress_rules": [
        {
          "port": 8080,
          "hosts": [
            "0.0.0.0/0"
          ]
        }
      ],
      "application_attributes": {
        "application_volume": {
          "volume_size_gb": 3
        }
      }
    },
    {
      "name": "drupal",
      "ssh_user": "root",
      "iam-role": "demo-node",
      "vpc": {
        "vpc_name": "VPC",
        "subnet_name": "PubSubnet1",
        "nat_host_name": "NAT1Instance",
        "nat_ssh_user": "ec2-user"
      },
      <
      %
      if
      $environment
      =
      =
      "development"
      then
      %
      >
      "size": "t1.micro",
      <
      %
      else
      %
      >
      "size": "m4.large",
      <
      %
      end
      %
      >
      "run_list": [
        "recipe[mu-utility::git]"
      ],
      "add_firewall_rules": [
        {
          "rule_name": "ChefNodeSecurityGroup"
        },
        {
          "rule_name": "ChefAdminSecurityGroup"
        }
      ],
      "dependencies": [
        {
          "name": "drupaldbexistingsnapshot",
          "type": "database"
        },
        {
          "name": "vpc",
          "type": "cloudformation_stack"
        }
      ],
      "ingress_rules": [
        {
          "port": 80,
          "hosts": [
            "0.0.0.0/0"
          ]
        },
        {
          "port": 443,
          "hosts": [
            "0.0.0.0/0"
          ]
        }
      ]
    }
  ],
  "admins": [
    {
      "name": "test1",
      "email": "mail@example.com"
    }
  ]
}
